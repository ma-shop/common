{
  "npmClient": "yarn",
  "packages": ["packages/*"],
  "version": "independent",
  "ignoreChanges": ["ignored-file", "*.md"],
  "command": {
    "publish": {
      "npmClientArgs": ["--access public --no-verify-access"],
      "ignoreChanges": ["*.md", "packages/*/test/**"]
    }
  },
  "npmClientArgs": ["--no-lockfile --no-verify-access"]
}
